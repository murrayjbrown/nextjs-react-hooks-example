{
	"name": "nextjs-react-hooks-bulma",
	"description": "Next.js Application w/ React Hooks & Bulma",
	"version": "0.1.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/mjbrown/feathers-next-primus-react-hooks-bulma"
	},
	"author": {
		"name": "Murray J Brown",
		"email": "mjb@mjbrown.com"
	},
	"contributors": [],
	"bugs": {},
	"scripts": {
		"build": "npm run style && NODE_ENV=production next build",
		"clean": "rimraf node_modules/.cache .next",
		"debug": "NODE_ENV=development node --trace-warnings server/",
		"dev": "npm run style && NODE_ENV=development nodemon -w server server/",
		"flow": "flow --include-warnings --show-all-errors --strip-root",
		"lint": "eslint --config .eslintrc.json client/ pages/ server/ test/",
		"mocha": "NODE_ENV=testing mocha --require @babel/register client/**.spec.js server/**.spec.js test/**.spec.js --recursive --exit",
		"postinstall": "flow-typed install",
		"purge": "npm run clean && rimraf data logs",
		"start": "npm run build && NODE_ENV=production pm2 start server/",
		"stop": "pm2 stop server/",
		"style": "node-sass client/styles/base.scss public/styles/base.css",
		"test": "npm run test-unit:js && npm run test-unit:jsx && npm run test-int",
		"test-unit": "npm run test-unit:js && npm run test-unit:jsx",
		"test-unit:js": "ava",
		"test-unit:jsx": "jest",
		"test-unit-all": "npm run test-unit-all:js && npm run test-unit-all:jsx",
		"test-unit-all:js": "TESTSPEC='(spec|test)' ava",
		"test-unit-all:jsx": "TESTSPEC='(spec|test)' jest",
		"test-unit-dev": "npm run test-unit-dev:js && npm run test-unit-dev:jsx",
		"test-unit-dev:js": "TESTSPEC='test' ava",
		"test-unit-dev:jsx": "TESTSPEC='test' jest --passWithNoTests",
		"test-int": "concurrently 'npm run stop' 'npm run start' 'cypress run'",
		"test-int-dev": "concurrently 'npm run stop' 'npm run dev' 'cypress open'"
	},
	"directories": {
		"lib": "client",
		"server": "server",
		"test": "test"
	},
	"main": "server/index.js",
	"engines": {
		"node": "^11.0.0",
		"npm": ">= 3.0.0"
	},
	"dependencies": {
		"@zeit/next-css": "^1.0.1",
		"axios": "^0.19.0",
		"bulma": "^0.7.4",
		"compression": "^1.7.4",
		"config": "^3.1.0",
		"cors": "^2.8.5",
		"express": "^4.14.0",
		"helmet": "^3.16.0",
		"immer": "^2.1.3",
		"next": "^8.1.0",
		"next-router": "^1.3.6",
		"node-sass": "^4.12.0",
		"nodemon": "^1.18.10",
		"pm2": "^3.5.1",
		"rambdax": "^2.10.1",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-markdown": "^4.0.8",
		"rust-match": "^0.1.7",
		"sass-convert": "^0.5.2",
		"sass-loader": "^7.1.0",
		"serve-favicon": "^2.5.0",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@babel/core": "^7.1.0",
		"@babel/preset-env": "^7.4.3",
		"@babel/preset-flow": "^7.0.0",
		"@babel/preset-react": "^7.0.0",
		"@babel/register": "^7.4.4",
		"@testing-library/jest-dom": "^4.0.0",
		"@testing-library/react": "^8.0.5",
		"@zeit/next-sass": "^1.0.1",
		"autoprefixer": "^9.6.1",
		"ava": "^2.2.0",
		"babel-eslint": "^10.0.1",
		"babel-plugin-module-resolver": "^3.2.0",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.2.0",
		"concurrently": "^4.1.1",
		"cypress": "^3.4.0",
		"enzyme": "^3.10.0",
		"enzyme-adapter-react-16.3": "^1.7.1",
		"eslint": "^5.16.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-config-prettier": "^6.0.0",
		"eslint-plugin-ava": "^7.1.0",
		"eslint-plugin-chai-friendly": "^0.4.1",
		"eslint-plugin-cypress": "^2.6.0",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-jest": "^22.11.1",
		"eslint-plugin-jsx-a11y": "^6.2.1",
		"eslint-plugin-react": "^7.12.4",
		"eslint-plugin-react-hooks": "^1.4.0",
		"esm": "^3.2.25",
		"flow-bin": "^0.102.0",
		"flow-typed": "^2.5.2",
		"jest": "^24.8.0",
		"jsdom": "^15.1.1",
		"jsdom-global": "^3.0.2",
		"next-compose-plugins": "^2.2.0",
		"nodemon": "^1.18.11",
		"normalize-scss": "^7.0.1",
		"prettier": "^1.17.0",
		"react-test-renderer": "^16.8.6",
		"rewire": "^4.0.1",
		"rimraf": "^2.6.2",
		"sinon": "^7.3.2",
		"webpack": "^4.29.0",
		"webpack-cli": "^3.3.5",
		"webpack-dev-middleware": "^3.6.0",
		"webpack-hot-middleware": "^2.24.3"
	},
	"nodemonConfig": {
		"ignore": [
			".next/*",
			"test/*"
		],
		"delay": "2500"
	}
}
